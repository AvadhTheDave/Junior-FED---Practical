<div class="browse">
    <div class="wrapper browse">
        <div class="browse-sector">
            <div class="browse-sector__title">
                <h3>{{ browseSectorMessage }}</h3>
                <h3><a href="#">view all &raquo;</a></h3>
            </div>
            <ul class="browse-sector__list">
                {% for item in browseItems %}
                    <li class="browse-sector__list-item"><a href="{{ item.href }}">{{ item.label }}</a><span class="quantity"> {{ item.quantity }} </span></li>
                {% endfor %}
            </ul>
        </div>

        <div class="browse-featured">
            <div class="browse-featured__title">
                <h3>{{ browseFeaturedMessage }}</h3>
                <h3><a href="#">view all &raquo;</a></h3>
            </div>

            <div class="browse-featured__list">
                {% for item in featuredItems %}
                    <div class="browse-featured__list-item">
                        <div class="browse-featured__list-item-company">
                            <img src="{{ assetPath }}/images/_jobs/{{ item.logo }}.png" alt="{{ item.logo }} logo" class="company__logo"/>
                        </div>
                        <div class="browse-featured__list-item-info">
                            <a href="#">{{ item.role }}</a>
                            <h5 class="location">{{ item.location }}</h5>
                            <h5 class="salary">{{ item.salary }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>